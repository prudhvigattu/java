/*program to find smallest element in an array*/
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter no.of elements to be stored in the array:");
		int n=sc.nextInt();
		int a[]=new int[n];
		for(int i=0;i<n;i++)
		{
		    System.out.println("Enter value at index-"+i+":");
		    a[i]=sc.nextInt();
		    
		}
		System.out.println("The smallest element in the array is:");
		int small=a[0];
		for(int i=1;i<n;i++)
		{
		    if(a[i]<small)
		    {
		        small=a[i];
		    }
		}
		System.out.println(small);
	}
}
